{  
  "compilerOptions": {  
    "module": "CommonJS",  
    "esModuleInterop": true,  
    "allowSyntheticDefaultImports": true,  
    "target": "esnext",  
    "moduleResolution": "node",  
    "sourceMap": true,  
    "outDir": "dist",  
    "rootDir": "src",  
    "lib": ["es2015", "esnext"],  
    "allowJs": true,   
    "typeRoots": ["./node_modules/@types", "./src/types"],  
    "skipLibCheck": true  
  },  
  "include": ["src/**/*.ts"],  
}